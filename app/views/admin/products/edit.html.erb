<h2> Edit Product </h2>

<%= simple_form_for [:admin, @product] do |f| %>

  <div class="group">
    <%= f.input :title %>
  </div>

  <div class="group">
    <%= f.input :description %>
  </div>

  <div class="group">
    <%= f.input :quantity %>
  </div>

  <div class="group">
    <%= f.input :price %>
  </div>
  <div class="group">
    ['穿山甲'，‘海龟’，’鹰隼’]
    <%= f.input :animal%>
  </div>

  <%if @product.image.present?%>
  <span>目前商品图<%=image_tag(f.image.thumb.url)%></span>
  <%end%>

  <div class="group">
    <%= f.input :image, as: :file %>
  </div>

  <%= f.submit "Submit", data: { disable_with: "Submitting..." } %>

<% end %>
